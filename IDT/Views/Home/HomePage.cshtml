@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .header {
        background-color: #f5c518;
        padding: 10px;
        text-align: center;
        font-weight: bold;
        font-size: 24px;
        border-radius: 10px 10px 0 0;
    }

    .page-wrapper {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .container {
        flex: 1; /* fills remaining vertical space */
        display: flex;
        justify-content: space-between;
        padding: 10px;
        gap: 10px;
        width: 100%;
        box-sizing: border-box;
    }

    .left-panel {
        width: 15%; /* made smaller */
        padding: 10px;
    }

    .middle-panel {
        width: 70%; /* made larger */
        border: 2px solid #f5c518;
        height: 500px;
        margin: 0 10px;
    }

    .right-panel {
        width: 20%;
        border: 2px solid #f5c518;
        height: 500px;
    }

    /* .middle-panel, .right-panel {
        border: 2px solid #f5c518;
        height: 400px;
    } */

    .footer {
        background-color: #f5c518;
        padding: 10px;
        text-align: center;
        font-weight: bold;
        border-radius: 0 0 10px 10px;
        margin-top: 10px;
    }

    .label-input {
        margin: 10px 0;
    }

    input, textarea {
        width: 100%;
        padding: 5px;
        border: 2px solid #f5c518;
        border-radius: 5px;
    }

    .right-panel {
        width: 20%;
        border: 2px solid #f5c518;
        height: 500px;
        display: flex;
        flex-direction: column;
        justify-content: flex-end; /* move content to bottom */
        align-items: center;
        padding-bottom: 10px;
    }

    .buttons {
        display: flex;
        gap: 10px; /* spacing between buttons */
        flex-wrap: wrap;
        justify-content: center;
    }

        .buttons button {
            padding: 8px 12px;
            background-color: white;
            border: 2px solid #f5c518;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
        }


    img {
        max-width: 100%;
        height: auto;
        display: block;
        margin-bottom: 10px;
    }
</style>
<div class="page-wrapper">
<div class="header">HOME</div>

    <div class="container">
        <div class="left-panel">
            <img src="~/img/idtlogo.png" alt="Logo" />

            <!-- ✅ Begin the form: -->
            <form asp-controller="Scan" asp-action="SaveScanData" method="post">
                <div class="label-input">Lot No: <input type="text" name="lotNo" /></div>
                <div class="label-input">ID: <input type="text" name="identifier" /></div>
                <div class="label-input">Size: <input type="text" name="size" /></div>
                <div class="label-input">Remarks:<textarea rows="3" name="remarks"></textarea></div>

                <div class="buttons">
                    <input type="range" />
                    <br />
                    <button type="button">000</button>
                    <button type="button">Auto Focus</button>
                </div>

                <!-- ✅ Scan button (submit) also inside form -->
                <div class="buttons">
                    <button type="submit">Scan</button>
                </div>
            </form> <!-- ✅ Closing the form properly -->
        </div>

       <div class="middle-panel">
    <video id="video" autoplay playsinline></video>
</div>

<style>
    .middle-panel {
        width: 70%;
        border: 2px solid #f5c518;
        height: 500px;
        margin: 0 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .middle-panel video {
        width: 100%;
        height: 100%;
        object-fit: cover; /* ensures the video fills the box */
    }
</style>

<script>
    navigator.mediaDevices.getUserMedia({ video: true })
        .then(function (stream) {
            document.getElementById('video').srcObject = stream;
        })
        .catch(function (err) {
            console.error("Error accessing camera: ", err);
        });
</script>


        <div class="right-panel">
            <div class="buttons">
                <button type="button">History</button><br />
                <button type="button">Help</button>
            </div>
        </div>
    </div>



<div class="footer">
    IDT Gemological Laboratories Worldwide | www.idtworldwide.com
</div>
</div>